<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:background="#fbffff"
    tools:context=".LoginScreen">

    <LinearLayout
        android:id="@+id/lgn_ll"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/lgn_img"
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="200dp"
            android:layout_height="160dp" />
    </LinearLayout>
    <EditText
        android:id="@+id/lgn_number"
        android:layout_below="@id/lgn_ll"
        android:singleLine="true"
        android:inputType="number"
        android:layout_marginLeft="1dp"
        android:drawableLeft="@drawable/mobile"
        android:paddingLeft="4dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edshape"
        android:fontFamily="serif"
        android:hint="Mobile Number"
        android:layout_width="365dp"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/lgn_pswd"
        android:layout_below="@id/lgn_number"
        android:singleLine="true"
        android:inputType="textPassword"
        android:fontFamily="serif"
        android:layout_marginLeft="1dp"
        android:drawableLeft="@drawable/pswd"
        android:paddingLeft="4dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edshape"
        android:hint="Password"
        android:layout_width="365dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:id="@+id/lgn_ll2"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_below="@id/lgn_pswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:fontFamily="serif"
            android:text="Login"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:background="@drawable/btn"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_hrz"
        android:layout_below="@+id/lgn_ll2"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:onClick="clickforgot"
            android:id="@+id/lgn_fgtpswd"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:textSize="16dp"
            android:textColor="#263238"
            android:fontFamily="serif"
            android:text="Forgot Password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:onClick="clickregister"
            android:layout_marginLeft="20dp"
            android:id="@+id/lgn_rdstr"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:textColor="#263238"
            android:fontFamily="serif"
            android:text="New?Register Now!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
       android:layout_below="@+id/ll_hrz"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:baselineAlignBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/tranferent"
            android:id="@+id/lgn_img2"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginBottom="0.5dp"/>
    </LinearLayout>
</RelativeLayout>